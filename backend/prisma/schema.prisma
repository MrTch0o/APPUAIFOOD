// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  CLIENT
  RESTAURANT_OWNER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

// Models
model RestaurantCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true) @map("is_active")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  restaurants Restaurant[]

  @@index([isActive])
  @@map("restaurant_categories")
}

model ProductCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  icon        String?
  isActive    Boolean  @default(true) @map("is_active")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  products    Product[]

  @@index([isActive])
  @@map("product_categories")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String
  phone       String?
  role        UserRole @default(CLIENT)
  is2FAEnabled Boolean @default(false) @map("is_2fa_enabled")
  twoFASecret String?  @map("two_fa_secret")
  refreshToken String? @map("refresh_token")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  addresses         Address[]
  orders            Order[]
  ownedRestaurants  Restaurant[] @relation("RestaurantOwner")
  reviews           Review[]
  cartItems         CartItem[]

  @@map("users")
}

model Restaurant {
  id            String  @id @default(uuid())
  name          String
  description   String?
  image         String?
  rating        Float   @default(0)
  deliveryTime  String  @map("delivery_time")
  deliveryFee   Float   @map("delivery_fee")
  minimumOrder  Float?  @map("minimum_order")
  isActive      Boolean @default(true) @map("is_active")
  address       String
  phone         String
  openingHours  Json?   @map("opening_hours")
  
  ownerId           String  @map("owner_id")
  restaurantCategoryId String  @map("restaurant_category_id")
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  owner         User                 @relation("RestaurantOwner", fields: [ownerId], references: [id])
  category      RestaurantCategory   @relation(fields: [restaurantCategoryId], references: [id])
  products      Product[]
  orders        Order[]
  reviews       Review[]

  @@index([ownerId])
  @@index([restaurantCategoryId])
  @@map("restaurants")
}

model Product {
  id              String  @id @default(uuid())
  name            String
  description     String?
  price           Float
  image           String?
  available       Boolean @default(true)
  preparationTime Int?    @map("preparation_time")
  
  restaurantId     String  @map("restaurant_id")
  productCategoryId String  @map("product_category_id")
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant       Restaurant        @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  category         ProductCategory   @relation(fields: [productCategoryId], references: [id])
  orderItems       OrderItem[]
  cartItems        CartItem[]

  @@index([restaurantId])
  @@index([productCategoryId])
  @@map("products")
}

model Order {
  id            String      @id @default(uuid())
  status        OrderStatus @default(PENDING)
  subtotal      Float
  deliveryFee   Float       @map("delivery_fee")
  total         Float
  paymentMethod String      @map("payment_method")
  notes         String?
  
  userId        String      @map("user_id")
  restaurantId  String      @map("restaurant_id")
  addressId     String      @map("address_id")
  
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  restaurant    Restaurant  @relation(fields: [restaurantId], references: [id])
  address       Address     @relation(fields: [addressId], references: [id])
  items         OrderItem[]
  review        Review?

  @@index([userId])
  @@index([restaurantId])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  subtotal  Float
  notes     String?
  
  orderId   String   @map("order_id")
  productId String   @map("product_id")
  
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model Address {
  id           String  @id @default(uuid())
  label        String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  zipCode      String  @map("zip_code")
  isDefault    Boolean @default(false) @map("is_default")
  
  userId       String  @map("user_id")
  
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders       Order[]

  @@index([userId])
  @@map("addresses")
}

model Review {
  id            String   @id @default(uuid())
  rating        Int
  comment       String?
  
  userId        String   @map("user_id")
  restaurantId  String   @map("restaurant_id")
  orderId       String   @unique @map("order_id")
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  user          User       @relation(fields: [userId], references: [id])
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
  order         Order      @relation(fields: [orderId], references: [id])

  @@index([restaurantId])
  @@map("reviews")
}

model CartItem {
  id        String   @id @default(uuid())
  quantity  Int      @default(1)
  
  userId    String   @map("user_id")
  productId String   @map("product_id")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("cart_items")
}
